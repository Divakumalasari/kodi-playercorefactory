<playercorefactory>
 <players>
  <player name="external player" type="ExternalPlayer" audio="false" video="true">
	<filename>"$HOME/git/kodi-playercorefactory/bash-scripts/rip-play-external"</filename>
     <args>"{0}"</args>
     <hidexbmc>false</hidexbmc>
   </player>
   <player name="save url" type="ExternalPlayer" audio="true" video="true">
	<filename>printf</filename>
     <args>"%s\n" "{0}" > "$HOME/Desktop/url-$(date +"%Y-%m-%d-%H-%M-%S").txt"</args>
     <hidexbmc>false</hidexbmc>
   </player>
 </players>
</playercorefactory>
